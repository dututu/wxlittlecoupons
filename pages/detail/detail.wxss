/* pages/detail/detail.wxss */
.container {
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: #f8f9fa;
  padding: 0 25rpx;
  position: relative;
  color: #595959;
}
.detail_info_detail_right_img {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  padding: 13rpx 13rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}
.detail_info_detail_right_img>image {
  width: 100%;
  height: 100%;
  display: block;
  /*padding: 10rpx;*/
}
.color {
  color: #09bb07;
}
.hidden {
  overflow: hidden
}
.comment_box>form button {
  border: 0;
  background-color: #26c73d;
  color: #fff;
}
/*详情信息样式*/
.detail_info {
  padding-top: 57rpx;
}
.detail_info_tit {

  width: 100%;
  height: 230rpx;
  text-align: center;
  line-height: 230rpx;
  background: url("data:image/png;base64,");
  background-size: 100% 100%;
}
.detail_info_tit>text {
  font-size: 36rpx;
  color: #fff;
}
.detail_info_bot {
  width: 100%;
  background: url("data:image/png;base64,");
  background-size: 100% 100%;
  padding-bottom: 34rpx;
}
.detail_info_bot_box_top {
  width: 100%;
  padding-top: 60rpx;
  text-align: center;
}
.detail_info_bot_box_top_text {
  font-size: 28rpx;
  color: #595959;
  margin-top: 25rpx;
}
.detail_info_button {
  width: 560rpx;
  height: 90rpx;
  background-color: #09bb07;
  margin: 0 auto ;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 90rpx;
}
.detail_info_detail {
  padding: 0 25rpx;
  margin-top: 63rpx;
}
.detail_info_box {
  width: 100%;
  line-height: 50rpx;
}
.detail_info_detail_left {
  float: left;
  width: 80rpx;
  font-size: 28rpx;
  color: #595959;
}
.detail_info_detail_right {
  height: 100%;
  overflow: hidden;
  font-size: 28rpx;
  color: #595959;
}
/*详情评论部分的样式*/
.detail_pinglun {
  margin-top: 20rpx;
  background-color: #fff;
}
.detail_pinglun_tit {
  margin: 0 20rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 2rpx solid #efefef;
}
.detail_pinglun_tit_left {
  float: left;
}
.detail_pinglun_tit_left>image {
  width: 26rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.detail_pinglun_tit_left>text {
  font-size: 26rpx;
  color: #595959;
}
.detail_pinglun_tit_right {
  float: right;
}
.detail_pinglun_tit_right>image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.detail_pinglun_tit_right>text {
  font-size: 26rpx;
  color: #09bb07;
}
/*这是没有评论的时候*/
.detail_pinglun_info {
  width: 100%;
  height: 175rpx;
  position: relative; 
}
.detail_pinglun_info_box {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 100%;
  text-align: center;
}
.detail_pinglun_info_box>image {
  width: 58rpx;
  height: 58rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}
.detail_pinglun_info_box>text {
  font-size: 26rpx;
  color: #595959;
}
/*这是有评论的时候*/
.detail_pinglun_box {
  height: 183rpx;
}
.detail_pinglun_info_per {
  padding: 0 30rpx;
  background-color: #fff;
}
.detail_pinglun_info_per_left {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin-right: 20rpx;
}
.detail_pinglun_info_per_left>image {
  width: 100%;
  border-radius: 50%;
  height: 100%;
  margin-top: 30rpx;
}
.detail_pinglun_info_per_right {
  height: 100%;
  overflow: hidden;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #efefef;
}
.detail_pinglun_top_left {
  font-size: 26rpx;
  color: #595959;
  float: left;
}
.detail_pinglun_top_right {
  float: right;
  margin-top: -20rpx;
}
.detail_pinglun_top_right>image {
  width: 22rpx;
  height: 23rpx;
  margin-right: 8rpx;
}
.detail_pinglun_top_right>text {
  font-size: 24rpx;
}
.detail_pinglun_time {
  font-size: 22rpx;
  color: #a3a3a3;
  margin-top: 10rpx;
}
.detail_pinglun_question {
  font-size: 26rpx;
  color: #000;
  margin-top: 15rpx;
}
/*评论弹出盒子的样式*/
.comment {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0%;
  left: 0;
}
.comment_box {
  width: 100%;
  height: 424rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
}
.comment_box_info {
  margin: 40rpx 40rpx 30rpx;
  border: 2rpx solid #dedede;
  border-radius: 10rpx;
  height: 230rpx;
}
.comment_box_info>textarea {
  height: 200rpx;
  padding: 25rpx;
  overflow: hidden;
}
.comment_box_submit {
  margin: 0 40rpx;
  height: 84rpx;
  background-color: #09bb07;
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
}
/*二维码弹出盒子样式*/
.code {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.6);
}
.code_box {
  width: 100%;
  height: 100%;
}
.code_box_close {
  width: 32rpx;
  height: 34rpx;
  padding-top: 260rpx;
  padding-left: 580rpx;
}
.code_box_close>image {
  width: 100%;
  height: 100%;
}
.code_box_img {
  width: 300rpx;
  height: 310rpx;
  background-color: #fff;
  margin: 20rpx auto 0;
  padding: 20rpx 25rpx;
}
.code_box_img >image {
  width: 100%;
  height: 100%;
}
.code_box_text {
  width: 100%;
  margin-top: 38rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.share_b::after {
  border:unset;
}
.share_b {
  display: unset;
  margin: unset;
  padding: unset;
}




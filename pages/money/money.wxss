/* pages/money/money.wxss */
.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  position: relative;
}
.bgc {
  color: red !important;
}
/* 奖励资金弹出框 */
.reward {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: rgba(0,0,0,0.5);
}
.reward_box {
  position: relative;
  z-index: 3;
  background-color: #fff;
  margin: 400rpx 110rpx 0;
  border-radius: 10rpx;
  padding: 37rpx 0 168rpx;
}
.reward_box_tit {
  text-align: center;
  font-size: 32rpx;
  color: #000;
}
.reward_box_des {
  margin: 70rpx 45rpx 0;
  font-size: 30rpx;
  color: #000;
}
.reward_box_close {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.reward_box_close>image {
  width: 100%;
  height: 100%;
  display: block;
}
/* 充值弹出框 */
.recharge {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.recharge_box {
  position: relative;
  z-index: 3;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 360rpx 110rpx 0;
  padding: 37rpx 45rpx 50rpx;
}
.recharge_box_tit {
  text-align: center;
  font-size: 36rpx;
  color: #000;
}
.recharge_box_close {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.recharge_box_close>image {
  width: 100%;
  height: 100%;
  display: block;
}
.recharge_box_button {
  margin: 45rpx auto 0;
  width: 195rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #09bb07;
  border-radius: 30rpx;
  color: #fff;
  font-size: 30rpx;
}
.recharge_box_info {
   margin-top: 50rpx; 
  font-size: 32rpx;
  color: #000;
}
.recharge_box_info_top_con {
  width: 100%;
}
.recharge_box_info_top_con label {
  display: inline-block;
  width: 33.3%;
}
.recharge_box_info_top_con label:nth-child(4){
  width: auto;
}
.recharge_box_info_top_con radio {   
  margin-top: 30rpx;
}
.input {
  width: 50%;
  height: 100%;
  float: right;
  margin-top: 50rpx;
  border-bottom: 1rpx solid #000;
  color: red;
}
.recharge_box_info_bottom {
  margin-top: 30rpx;
} 
.recharge_box_info_bottom_left {
  float: left;
  margin-right: 30rpx;
}
/* 头部 */
.money_tit {
  width: 100%;
  height: 180rpx;
  background-color: #20c11e;
  color: #fff;
  padding-top: 62rpx;
}
.money_tit_des {
  margin-left: 60rpx;
  font-size: 30rpx;
}
.money_tit_num {
  margin-left: 60rpx;
  margin-top: 50rpx;
  font-size: 36rpx;
}
/* 切换导航样式 */
.money_con_tit {
  width: 100%;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  background-color: #09bb07;
  font-size: 30rpx;
  color: #fff;
}
.active {
  border: none !important;
  background-color: #fff !important;
  color: #000 !important;
}
.money_con_tit_left {
  width: 50%;
  height: 100%;
  float: left;
  border: 2rpx solid #e5e5e5;
  box-sizing: border-box;
  color: #000;
  position: relative;
}
.money_con_tit_left>image {
  width: 34rpx;
  height: 34rpx;
  padding: 20rpx;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
}
.money_con_tit_right {
  width: 50%;
  height: 100%;
  float: right;
  border: 2rpx solid #e5e5e5;
  box-sizing: border-box;
  color: #000;
  position: relative;
}
.money_con_tit_right>image {
  width: 34rpx;
  height: 34rpx;
  padding: 20rpx;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
}
/* 奖励资金部分 */
.money_con_info_per_top {
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  line-height: 110rpx;
  font-size: 30rpx;
}
.money_con_info_per_top_left {
  position: absolute;
  left: 45rpx;
}
.money_con_info_per_top_left_num {
  color: #09bb07;
}
.money_con_info_per_top_right {
  position: absolute;
  right: 30rpx;
  width: 138rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #09bb07;
  color: #fff;
  margin-top: 30rpx;
  border-radius: 25rpx;
}
.money_con_info_per_bottom {
  margin-top: 20rpx;
  background-color: #fff;
}
.money_con_info_per_bottom_per {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 30rpx;
}
.money_con_info_per_bottom_per_image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  margin-top: 18rpx;
  margin-right: 20rpx;
}
.money_con_info_per_bottom_per_image>image {
  width: 100%;
  height: 100%;
  display: block;
}
.money_con_info_per_bottom_per_name {
  color: #000;
  font-size: 30rpx;
  width: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;  
  float: left;
}
.money_con_info_per_bottom_per_des {
  color: #8d8d8d;
  font-size: 30rpx;
  margin-left: 20rpx;
  width:70rpx;
  float: left;
}
.money_con_info_per_bottom_per_time {
  float: left;
  color: #8d8d8d;
  font-size: 30rpx;
  width:305rpx;
  margin-left: 20rpx;
}
.money_con_info_per_bottom_per_num {
  color: #6acd6a;
  font-size: 30rpx;
  float: right;
}


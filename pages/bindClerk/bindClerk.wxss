/* pages/bindClerk/bindClerk.wxss */
.container {
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.bindClerk_info {
    width: 100%;
}
.bindClerk_info_box {
    width: 100%;
    padding-top: 140rpx;
}
.bindClerk_info_box_img {
    width: 195rpx;
    height: 195rpx;
    margin: 0 auto;
}
.bindClerk_info_box_img>image {
    width: 100%;
    height: 100%;
    display: block;
}
.bindClerk_info_box_text {
    width: 100%;
    text-align: center;
    margin-top: 78rpx;
    font-size: 30rpx;
    color: #595959;
}
.bindClerk_button {
    margin: 0 95rpx;
    height: 90rpx;
    margin-top: 165rpx;
    background-color: #09bb07;
    border-radius: 10rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 90rpx;
}
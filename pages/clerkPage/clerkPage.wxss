/* pages/clerkPage/clerkPage.wxss */
.container {
    width: 100%;
    height: 100%;
    background-color: #efefef;
    padding-top: 145rpx;
}
.mine_tit {
    width: 100%;
    height: 400rpx;
    padding-top: 85rpx;
}
.mine_tit_img {
    width: 176rpx;
    height: 176rpx;
    border-radius: 50%;
    margin: 0 auto;
}
.mine_tit_img>image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}
.mine-tit_text {
    margin-top: 25rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #000;
}
.coupon_info {
  padding: 0 20rpx;
}
.coupon_info_box {
  width: 100%;
  height: 200rpx;
  position: relative;
  margin-bottom: 20rpx;
  text-align: center;
}
.coupon_info_box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.coupon_info_box_left {
  width: 557rpx;
  padding: 28rpx 0;
  z-index: 1000;
  position: absolute;
  top: 0;
  left: 0;
}
.box_left {
  width: 145rpx;
  height: 145rpx;
  margin-left: 35rpx;
  margin-right: 32rpx;
  float: left;
}
.box_left>image {
  width: 100%;
  height: 100%;
  display: block;
}
.box_right {
  overflow: hidden;
  height: 100%;
}
.box_right_text {
  margin-top: 12rpx;
  font-size: 30rpx;
  color: #000;
  font-family: "苹方";
  margin-bottom: 42rpx;
}
.box_right_bot {
  font-size: 24rpx;
  color: #666666;
}
.coupon_info_box_right {
  width: 153rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 557rpx;
  z-index: 1000;
}
.coupon_info_button {
  width: 125rpx;
  height: 40rpx;
  background-color: #09bb07;
  margin: 80rpx auto 0;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 20rpx;
}
.clerkPage_button {
    margin: 50rpx 95rpx 0;
    height: 90rpx;
    background-color: #09bb07;
    border-radius: 10rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 90rpx;
}
    
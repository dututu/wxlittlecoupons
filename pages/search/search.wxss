/* pages/search/search.wxss */
.container {
    width: 100%;
    height: 100%;
    
}
.search_tit {
    height: 70rpx; 
    background-color: #fff; 
    border-bottom: 1rpx solid #ccc; 
    padding: 15rpx 30rpx; 
    line-height: 60rpx;
}
.search_tit_link {
  width: 48rpx;
  height: 100%;
  padding-left: 30rpx;
  float: left;
  padding-top: 5rpx;
}
.f_left {
  float: left;
}
.f_right {
  float: right;
}
.search_top_tit_right {
  font-size: 30rpx;
  width: 80rpx;
  height: 50rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}
.search_tit_link>image {
  width: 20rpx;
  height: 35rpx;
}
.search-input-view image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 11rpx;
}
.search_tit>form {
  width: 520rpx;
  height: 100%;
  float: left;
  /*background: url("../../imgs/search.png") no-repeat 45rpx center;*/
}

.search_tit>form input {
  
  height: 100%;
  font-family: "黑体";
  padding-left: 10rpx;

}
/* 搜索 */

.search-input-view {
  width: 520rpx;
  line-height: 190rpx;
  height: 52rpx;
  padding: 8rpx 30rpx;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  margin-right: 20rpx;
  float: left;
}

.search-input-view input {
  font-size: 32rpx;
}

.search_tit>form button {
  line-height: 65rpx;
  border: 0;
  background-color: #fff;
  color: #000;
  padding: 0;
}

.search_tit>form {
  width: 100%;
  height: 100%;
  float: left;
  background: url("../../imgs/search.png") no-repeat 45rpx center;
}
.active {
    font-family: "苹方";
    font-size: 28rpx;
    color: #8f8f8f;
}

.index_info {
  padding: 0 20rpx;
}
.index_info_box {
  height: 200rpx;
  position: relative;
  margin: 20rpx auto 0;
  background-color: #ebebeb;
}
.index_info_box:last-child {
  margin-bottom: 20rpx;
}
.index_info_box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.index_info_box_left {
  width: 557rpx;
  padding: 28rpx 0;
  z-index: 1000;
  position: absolute;
  top: 0;
  left: 0;
}
.box_left {
  width: 145rpx;
  height: 145rpx;
  margin-left: 35rpx;
  margin-right: 32rpx;
  float: left;
}
.box_left>image {
  width: 100%;
  height: 100%;
  display: block;
}
.box_right {
  overflow: hidden;
  height: 100%;
}
.box_right_text {
  margin-top: 12rpx;
  margin-bottom: 42rpx;
  font-size: 30rpx;
  color: #000;
  font-family: "苹方";
}
.box_right_bot>text {
  font-size: 24rpx;
  color: #666666;
  margin-left: 10rpx;
}
.box_right_bot>.eyes {
  width: 27rpx;
  height: 20rpx;
}
.box_right_bot>.add {
  width: 20rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
.index_info_box_right {
  width: 153rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 557rpx;
  z-index: 1000;
}
.index_info_button {
  width: 125rpx;
  height: 40rpx;
  background-color: #09bb07;
  margin: 80rpx auto 0;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 20rpx;
}




/* pages/mine/mine.wxss */
.container {
   text-align: center;
}
/*我的上半部分的样式*/
.top{
  width: 750rpx;
  height: 384rpx;
  text-align: center;
  background-image: linear-gradient(-180deg, #EC2350 4%, #FE6862 100%);
}
.head {
  width: 160rpx;
  height: 160rpx;
  border: 2px solid #E2E2E2;
  border-radius: 50%;
  position: absolute;
  margin: 63rpx 295rpx;
}
.head_img {
   width: 160rpx; 
   height: 160rpx; 
   border-radius: 50%;
}
.name {
  width: 97rpx;
  height: 40rpx;
  position: absolute;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  margin: 234rpx 327rpx;
}
/* 新增部分的样式 */
.center {
  display: flex;
  width: 690rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 4px 32px 0 rgba(0,0,0,0.08);
  border-radius: 16rpx;
  margin: -70rpx 30rpx;
  padding-top: 33rpx;
}
.center_purse {
  width: 334rpx;
  height: 130rpx;
  border-right: 1px solid #BBBBBB;
}
.center_purse_money {
  width: 250rpx;
  height: 56rpx;
  /* line-height: 56rpx; */
  font-family: DINAlternate-Bold;
  font-size: 48rpx;
  color: #333333;
  margin:9rpx auto;
}
.center_purse_img {
  width: 33rpx;
  height: 33rpx;
  margin: 32rpx 125rpx;
}
.center_purse_img image{
  width: 33rpx;
  height: 33rpx;
}
.center_purse_name {
  position: absolute;
  width: 53rpx;
  height: 37rpx;
  line-height: 37rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333333;
  margin: -40rpx 171rpx;
}
.center_recommend {
  width: 334rpx;
  height: 130rpx;
  border-left: 1px solid #BBBBBB;
}
.center_recommend_img {
  width:48rpx;
  height:35rpx;
  margin: 32rpx 125rpx;
}
.center_recommend_img image{
  width:48rpx;
  height:35rpx;
}

/*我的下半部分的样式*/
.bottom {
  margin-top: 80rpx;
} 
.bottom_list {
  width: 670rpx;
  height: 110rpx;
  border-bottom: 1px solid #E2E2E2;
  margin: 0 40rpx;
  line-height: 110rpx;
}
.bottom_list_my_coupon {
  position: absolute;
  width: 38rpx;
  height: 32rpx;
}
.bottom_list_my_coupon image{
  width: 38rpx;
  height: 32rpx; 
}
.bottom_list_my_tittle {
  position: absolute;
  /* width: 128rpx; */
  height: 45rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
  margin: 0 58rpx;
}
.bottom_list_my_count {
  float: right;
  height: 42rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #B9B9B9;
  margin: 0 12rpx;
}
.bottom_list_sanjiao {
  float: right;
  width: 18rpx;
  height: 30rpx;
}
.bottom_list_sanjiao image{
  width: 18rpx;
  height: 30rpx;
}


/*客服  */
.deg {
  position: fixed;
  width: 100rpx;
  height: 80rpx;
  bottom: 0;
  right: 20rpx;
  z-index: 1000;
  text-align: center;
}
.deg button{
  border:none;
  height:96rpx;
  width: 96rpx;
  /* border-radius:48rpx; */
  font-size:20rpx;
  text-align:center; 
}
.deg .img {
  width: 48rpx;
  height: 48rpx;

}
.share_b::after {
  border:unset;
}
.share_b {
  display: unset;
  margin: unset;
  padding: unset;
}
.share {
  padding-left:unset;
  background-color:unset;
   
}
.share::after {
  border:unset;
}
